@model List<SpaceSoftSolutions.Models.Attendance>


@{
    Layout = "DashboardManagers";
}
<main class="main-content position-relative max-height-vh-100 h-100 border-radius-lg">
    <!-- Navbar code here (if needed) -->
    <!-- Attendance Table -->
    <div class="container-fluid py-4">
        <div class="row">
            <div class="col-12">
                <div class="card mb-4">
                    <div class="card-header pb-0">
                        <h6>Attendance for Employee: @Model.FirstOrDefault()?.Employee.Name</h6>
                    </div>
                    <div class="card-body px-0 pt-0 pb-2">
                        <div class="table-responsive p-0">
                            @if (Model != null && Model.Any())
                            {
                                <table class="table align-items-center mb-0">
                                    <thead>
                                        <tr>
                                            <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Date</th>
                                            <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Punch In</th>
                                            <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Punch Out</th>
                                            <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Total Hours</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var attendance in Model)
                                        {
                                            <tr>
                                                <td>
                                                    <p class="text-xs text-secondary mb-0">@attendance.PunchIn.ToString("MM/dd/yyyy")</p>
                                                </td>
                                                <td>
                                                    <p class="text-xs text-secondary mb-0">@attendance.PunchIn.ToString("HH:mm")</p>
                                                </td>
                                                <td>
                                                    <p class="text-xs text-secondary mb-0">@attendance.PunchOut?.ToString("HH:mm")</p>
                                                </td>
                                                <td class="text-center">
                                                    <p class="text-xs text-secondary mb-0">
                                                        @if (attendance.PunchOut.HasValue)
                                                        {
                                                            var totalHours = (attendance.PunchOut.Value - attendance.PunchIn).TotalHours;
                                                            @totalHours.ToString("0.##")
                                                        }
                                                        else
                                                        {
                                                            <span>N/A</span>
                                                        }
                                                    </p>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            }
                            else
                            {
                                <!-- رسالة إذا كانت البيانات غير موجودة -->
                                <div class="text-center text-secondary">
                                    <p>No attendance records found for this employee.</p>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
