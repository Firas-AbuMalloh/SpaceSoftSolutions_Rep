@{
    ViewData["Title"] = "Approved Leave Requests";
}

@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
}
<link rel="stylesheet" href="~/css//LeaveRequests.css" asp-append-version="true" />


<div class="container-fluid my-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="fw-bold text-dark">Approved Leave Requests</h1>
        <a href="@Url.Action("ExportToPDF", "HR", new { reportType = "leaves" })" class="btn btn-custom">Download Leaves PDF</a>
    </div>

    <div class="card shadow-lg border-0 p-4 animated-card">
        <form method="get" action="/HR/ApprovedLeaves">
            <div class="input-group mb-4">
                <input type="text" id="search" name="search" class="form-control shadow-sm" placeholder="Search Approved Requests..." value="@ViewData["SearchQuery"]">
                <button type="submit" class="btn btn-custom">Search</button>
            </div>
        </form>
    </div>

    @if (ViewBag.Message != null)
    {
        <div class="alert alert-warning text-center mt-3">
            @ViewBag.Message
        </div>
    }

    <div class="leave-grid mt-4">
        @foreach (var leave in Model)
        {
            <div class="leave-card">
                <h3 class="text-dark">@leave.Employee.Name</h3>
                <p class="text-dark"><strong>Email:</strong> @leave.Employee.Email</p>
                <p class="text-dark"><strong>Start Date:</strong> @leave.StartDate.ToShortDateString()</p>
                <p class="text-dark"><strong>End Date:</strong> @leave.EndDate.ToShortDateString()</p>
                <p class="text-dark"><strong>Reason:</strong> @leave.Reason</p>
                <p class="text-dark"><strong>Status:</strong> @leave.Status</p>
                <form method="post" action="/HR/ViewLeaveDetails">
                    <input type="hidden" name="leaveId" value="@leave.Id" />
                    <button type="submit" class="btn btn-custom">View Details</button>
                </form>
            </div>
        }
    </div>
</div>

