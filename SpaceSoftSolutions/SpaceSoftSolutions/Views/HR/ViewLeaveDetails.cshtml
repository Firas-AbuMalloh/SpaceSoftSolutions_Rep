@{
    ViewData["Title"] = "Leave Request Details";
}

@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <style>
        body {
            background: linear-gradient(135deg, #667eea, #764ba2);
            font-family: 'Poppins', sans-serif;
            padding: 30px;
            color: #fff;
        }

        .container {
            max-width: 800px;
            margin: auto;
            text-align: center;
        }

        h2 {
            margin-bottom: 30px;
            font-size: 32px;
            color: #fff;
        }

        .leave-card {
            background: rgba(255, 255, 255, 0.3);
            padding: 25px;
            border-radius: 15px;
            text-align: center;
            position: relative;
            transition: transform 0.3s ease-in-out;
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
            margin-bottom: 30px;
        }

            .leave-card h3 {
                margin: 15px 0;
                font-size: 28px;
                color: #fff;
            }

            .leave-card p {
                font-size: 16px;
                margin: 10px 0;
                color: #fff;
            }

                .leave-card p strong {
                    color: #764ba2;
                }

        .download-btn {
            display: inline-block;
            padding: 10px 20px;
            background: #fff;
            color: #764ba2;
            border-radius: 25px;
            text-decoration: none;
            font-weight: bold;
            transition: 0.3s;
            margin-top: 20px;
            text-align: center;
        }

            .download-btn:hover {
                background: #764ba2;
                color: #fff;
            }

        .modal-content {
            background: #fff;
            padding: 20px;
            border-radius: 15px;
            width: 50%;
            text-align: center;
            color: #333;
        }

        .details-btn {
            display: inline-block;
            padding: 10px 20px;
            background: #fff;
            color: #764ba2;
            border-radius: 25px;
            text-decoration: none;
            font-weight: bold;
            transition: 0.3s;
            margin-top: 20px;
            cursor: pointer;
        }

            .details-btn:hover {
                background: #764ba2;
                color: #fff;
            }
    </style>
}

<div class="container">
    <h2>Leave Request Details</h2>

    <!-- عرض التفاصيل -->
    <div class="leave-card">
        <h3>@Model.Employee.Name</h3>
        <p><strong>Email:</strong> @Model.Employee.Email</p>
        <p><strong>Start Date:</strong> @Model.StartDate.ToShortDateString()</p>
        <p><strong>End Date:</strong> @Model.EndDate.ToShortDateString()</p>
        <p><strong>Reason:</strong> @Model.Reason</p>
        <p><strong>Status:</strong> @Model.Status</p>
    </div>

    <!-- العودة إلى الصفحة السابقة -->
    <a href="/HR/ApprovedLeaves" class="download-btn">Back to Approved Requests</a>
</div>
